{
  "env": {
    "es6": true,
    "node": true,
    "es2020": true,
    "commonjs": true
  },
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": "error",
    "no-console": "off",
    "no-unused-vars": "warn",
    "import/prefer-default-export": "off",
    "no-restricted-syntax": "off",
    "guard-for-in": "off",
    "no-continue": "off",
    "no-await-in-loop":"off"
  }
}
